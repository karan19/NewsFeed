{
  "name": "newsfeed-monorepo",
  "version": "0.1.0",
  "description": "NewsFeed Monorepo - Unified newsfeed application with backend and frontend",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:backend": "npm run build -w @newsfeed/backend",
    "build:frontend": "npm run build -w @newsfeed/frontend",
    "test": "npm run test --workspaces --if-present",
    "test:backend": "npm run test -w @newsfeed/backend",
    "lint": "npm run lint --workspaces --if-present",
    "deploy": "npm run deploy -w @newsfeed/backend",
    "backfill": "npm run backfill -w @newsfeed/backend",
    "backfill:dry": "npm run backfill:dry -w @newsfeed/backend"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
